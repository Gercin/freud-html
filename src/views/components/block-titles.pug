mixin big-titles
  .big-titles(class=attributes.class data-aos='fade-up')
    .big-titles__subttl #{attributes.subttl}

    if (attributes.h1)
      h1.big-titles__ttl.h1 #{attributes.ttl}

        if (attributes.ttl2)
          br
          |#{attributes.ttl2}
      
    else
      h2.big-titles__ttl.h1 #{attributes.ttl}
      
        if (attributes.ttl2)
          br
          |#{attributes.ttl2}

    if (attributes.txt)
      .big-titles__txt #{attributes.txt}

        if (attributes.txt2)
          br
          |#{attributes.txt2}

        if (attributes.txtp)
          p #{attributes.txtp} #[br] #{attributes.txtp2}



mixin small-titles
  .small-titles(class=attributes.class data-aos='fade-up')
    h3.small-titles__ttl.h2 #{attributes.ttl}

      if (attributes.ttl2)
        br
        |#{attributes.ttl2}

    if (attributes.txt)
      .small-titles__txt #{attributes.txt}