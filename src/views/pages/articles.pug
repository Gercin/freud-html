        .articles-row.articles-body-row

          each item in articles
            +article-card(ttl=`${item.ttl}` txt=`${item.txt}`)

        .articles-body-row
          +article-card-big.articles-card--big-revert(ttl=`Как выбрать сигару` txt=`А началось все с открытия Колумбом Америки, когда вместе с другими «чудесами» были привезены в Испанию в 1493 году листья табака. И что только с ними не делали...`)

        .articles-row.articles-body-row

          each item in articles
            +article-card(ttl=`${item.ttl}` txt=`${item.txt}`)


        +brown-border-button.more-btn
          |Смотреть все статьи


  section.section--bottom
    .container
      +small-titles(ttl='Каталог товаров')

      .categories-slider.controls-out
        .swiper-container#categories-slider
          .swiper-wrapper
            -
              const cards = [
                {file: 'shop-category-1', ttl: 'Сигары'},
                {file: 'shop-category-2', ttl: 'Сигариллы'},
                {file: 'shop-category-1', ttl: 'Хьюмидоры'},
              ]
            each item in cards
              .swiper-slide
                a.shop-page-head__card(href="")
                  +picture(file=`${item.file}`)
                  .shop-page-head__card-ttl #{item.ttl}

        .controls-out__container
          +control-left#categories-slider-prev
          +control-right#categories-slider-next

  include ../components/sections/subscribe-section