extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content

  section.section--first
    .container
      +breadcrumbs(page = 'Справочная информация')

      .contacts-block.articles-head
        .contacts-block__top
          +big-titles.articles-ttls(subttl='профессор фрейд' ttl='Справочная информация' txt='Расскажем подробно обо всех тонкостях' txt2='и нюансах' h1)

          .scroll-down.only-desktop(data-aos='fade-up')
            .scroll-down__line

      .articles-top(data-aos='fade-up' data-tabs)

        .articles-top__item.active(data-tabs-item)
          |Все

        each item in ['Сигары', 'Алкоголь', 'Новости']
          .articles-top__item(data-tabs-item) #{item}

  section.section--bottom
    .container
      -
        const articles = [
          {ttl: 'Как хранить сигару', txt: 'Что же из себя представляет современная сигара? По способу производства различают сигары ручной работы.'},
          {ttl: 'Какую сигару выбрать к вину', txt: 'Что же из себя представляет современная сигара? По способу производства различают сигары ручной работы. Что же из себя представляет современная сигара? По способу производства различают сигары ...'}
        ]

      .articles-body2

        - for (i=0;i<4;i++)

          each item in articles
            +article-card(ttl=`${item.ttl}` txt=`${item.txt}`)
