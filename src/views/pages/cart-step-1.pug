extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content
  section.section--first
    .container
      .cart-section

        .cart-section__top
          h1.title-font.h2 Оформление заказа
          a.cart-section__back-link(href="") Вернуться к покупкам

        .cart-section__body

          .cart-section__col

            .cart-stage
              .cart-stage__row
                .cart-stage__count 1/3
                .cart-stage__ttl.h4.title-font Ваши товары
                .cart-stage__products 3 товара

              .cart-stage__products
                - for (i=0;i<3;i++)
                  .card-product
                    .card-product__img
                      +picture(file='shop-img-1')
                    .card-product__info
                      div
                        .card-product__brand Davidoff
                        .card-product__ttl Сигара Nicaragua Primeros Mad
                        .card-product__txt Доминикана, 130 мм x 21 RG, длительность курения 75 мин, крепость 4 из 5

                      button.card-product__btn.button--clean В избранное
                    .card-product__nums
                      .card-product__add
                        button.button--clean -
                        |2
                        button.button--clean +
                      .catalog-card__price
                        span.current 13 820 ₽
                        span.old 13 820 ₽
                      .card-product__amount 2 шт. х 6 000 ₽
                    .card-product__last-col
                      button.card-product__btn.button--clean Удалить

              +brown-button.cart-stage__products-btn
                |Перейти к оформлению

              .cart-stage__recommend
                .cart-stage__recommend-ttl.h4.title-font С этими товарами покупают
                .cart-stage__recommend-row
                  //- - for (x=0;x<4;x++)
                  //-   +catalog-card

          .cart-section__col