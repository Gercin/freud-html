extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content
  section.section--first
    .container
      .cart-section

        .cart-section__top
          h1.title-font.h2 Оформление заказа
          a.cart-section__back-link(href="") Вернуться к покупкам

        .cart-section__body

          .cart-section__col

            .cart-stage.open
              .cart-stage__row
                .cart-stage__row-col
                  .cart-stage__count 1/3
                  .cart-stage__ttl.h4.title-font Ваши товары
                  .cart-stage__products 3 товара

              .cart-products-active

                .cart-stage__product-list
                  - for (i=0;i<3;i++)
                    .card-product
                      .card-product__img
                        .catalog-card__labels
                          .catalog-card__labels-item.label-black NEW

                        +picture(file='shop-img-1')
                      .card-product__info
                        div
                          .card-product__brand Davidoff
                          .card-product__ttl Сигара Nicaragua Primeros Mad
                          .card-product__txt Доминикана, 130 мм x 21 RG, длительность курения 75 мин, крепость 4 из 5

                        button.card-product__btn.button--clean В избранное
                      .card-product__nums
                        .card-product__add
                          button.button--clean
                          |2
                          button.button--clean.plus
                        .catalog-card__price
                          span.current 13 820 ₽
                          span.old 13 820 ₽
                        .card-product__amount 2 шт. х 6 000 ₽
                      .card-product__last-col
                        button.card-product__btn.button--clean Удалить

                +brown-button.cart-stage__product-list-btn
                  |Перейти к оформлению

                .cart-stage__recommend
                  .cart-stage__recommend-ttl.h4.title-font С этими товарами покупают
                  .cart-stage__recommend-row
                    - for (a=0;a<2;a++)
                      -
                        var content = [
                          {img: 'shop-img-1',
                          brand: 'Ornellaia',
                          ttl: 'Вино St-Emilion AOC Premier Grand Cru Classe',
                          price: '165 750'},

                          {img: 'shop-img-2',
                          brand: 'Gurkha',
                          ttl: 'Сигара Triad Platinum',
                          price: '13 820 ₽'}
                        ]
                      each item in content
                        +catalog-card-small(img=`${item.img}` brand=`${item.brand}` ttl=`${item.ttl}` price=`${item.price}`)

            .cart-stage.collapsed
              .cart-stage__row
                .cart-stage__row-col
                  .cart-stage__count 2/3
                  .cart-stage__ttl.h4.title-font Контактные данные

            .cart-stage.collapsed
              .cart-stage__row
                .cart-stage__row-col
                  .cart-stage__count 3/3
                  .cart-stage__ttl.h4.title-font Получение заказа

          .cart-section__col

            .cart-result
              .cart-result__ttl Итоги
              .cart-result__row
                .cart-result__name 3 товара на сумму
                .cart-result__value 135 820 ₽
              .cart-result__row
                .cart-result__name Скидка
                .cart-result__value −11 000 ₽

              .cart-result__total
                .cart-result__name К оплате
                .cart-result__value 120 000 ₽

            .cart-promocode
              input.cart-promocode__input(type='text' placeholder='Ввести промокод')
              +arrow-right.cart-promocode__arrow