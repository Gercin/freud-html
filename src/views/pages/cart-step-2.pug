extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content
  section.section--first
    .container
      .cart-section

        .cart-section__top(data-aos='fade-up')
          h1.title-font.h2 Оформление заказа
          a.cart-section__back-link(href="")
            +arrow-left.only-mobile
            |Вернуться к покупкам

        .cart-section__body

          .cart-section__col

            .cart-stage.open(data-aos='fade-up')
              .cart-stage__row
                .cart-stage__row-col
                  .cart-stage__count 1/3
                  .cart-stage__ttl.h4.title-font Ваши товары
                  .cart-stage__products 3 товара

                button.button--clean.cart-stage__edit.only-desktop Изменить

              .cart-products-notactive
                - for (a=0;a<3;a++)
                  .cart-products-item
                    +picture.cart-products-item__img(file='shop-img-1')
                    .cart-products-item__row
                      .cart-products-item__ttl Сигара Nicaragua Primeros Mad
                      div &nbsp;—&nbsp;
                      .cart-products-item__price 13 820 ₽

              +brown-border-button.cart-stage__edit.only-mobile
                |Изменить
                
            .cart-stage.open(data-aos='fade-up')
              .cart-stage__row(data-aos='fade-up')
                .cart-stage__row-col
                  .cart-stage__count 2/3
                  .cart-stage__ttl.h4.title-font Контактные данные

              .cart-stage-form(data-aos='fade-up')
                .cart-stage-form__note
                  sup *
                  |— поля обязательные для заполнения

                form.form(novalidate)
                  label.form__label.cart-form-label
                    .form__field-name Имя
                      sup *
                    input.form__input(type='text' data-input-title='name' placeholder='Введите ваше имя' required)

                  label.form__label.cart-form-label
                    .form__field-name Фамилия
                      sup *
                    input.form__input(type='text' data-input-title='sec-name' placeholder='Введите вашу фамилию' required)

                  label.form__label.cart-form-label
                    .form__field-name Телефон
                      sup *
                    input.form__input(type='tel' placeholder='Введите номер телефона' required)

                  label.form__label.cart-form-label
                    .form__field-name E-mail
                    input.form__input(type='email' placeholder='Введите ваш электронный адрес')

                  label.form__label.cart-form-label
                    .form__field-name Комментарии к заказу
                    textarea.form__textarea( placeholder='Введите текст')

                  +brown-button.form__btn(type='submit')
                    |Продолжить

                  .checkbox.cart-stage-form__checkbox
                    label.checkbox__label
                      input.checkbox__input(type="checkbox" checked required)
                      .checkbox__box
                        +checkbox-white-svg.checkbox__svg

                    .checkbox__caption.only-desktop
                      |Нажимая на кнопку «Продолжить», вы соглашаетесь #[br]
                      a(href="") с политикой конфиденциальности

                    .checkbox__caption.only-mobile
                      |Нажимая на кнопку «Продолжить», вы соглашаетесь 
                      a(href="") с политикой конфиденциальности

            .cart-stage.collapsed(data-aos='fade-up')
              .cart-stage__row
                .cart-stage__row-col
                  .cart-stage__count 3/3
                  .cart-stage__ttl.h4.title-font Получение заказа

          .cart-section__col.only-desktop

            .cart-result(data-aos='fade-up')
              .cart-result__ttl Итого
              .cart-result__row
                .cart-result__name 3 товара на сумму
                .cart-result__value 135 820 ₽
              .cart-result__row
                .cart-result__name Скидка
                .cart-result__value −11 000 ₽
              .cart-result__row
                .cart-result__name Промокод «Фрейд»
                .cart-result__value −1 000 ₽

              .cart-result__total
                .cart-result__name К оплате
                .cart-result__value 120 000 ₽

            .cart-promocode(data-aos='fade-up')
              input.cart-promocode__input(type='text' placeholder='Ввести промокод')

              button.button--clean.cart-promocode-send
                +arrow-right.cart-promocode__arrow

              button.button--clean.cart-promocode-delete

            .cart-promocode-error.active — промокод не найден

